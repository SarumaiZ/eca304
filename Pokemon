class Pokemon:
    def __init__(self, nome, ID):
        self._nome = nome
        self._ID = ID
        self.HP = 0
        self.AT = 0
        self.DF = 0
        self.SP_AT = 0
        self.SP_DF = 0
        self.SP = 0
        self.golpes = []

    def atribuiHP(self, HP):
        while(HP>100 or HP<0):
            if(HP>100):
                print("\nValor maior que o limite, digite novamente")
                HP = int(input("Digite um valor para HP entre 0 e 100: "))
            if(HP<0):
                print("\nValor menor que o limite, digite novamente")
                HP = int(input("Digite um valor para HP entre 0 e 100: "))
        self.HP = HP
    def atribuiAT(self, AT):
        while(AT>150 or AT<0):
            if(AT>150):
                print("\nValor maior que o limite, digite novamente")
                AT = int(input("Digite um valor para HP entre 0 e 150: "))
            if(AT<0):
                print("\nValor menor que o limite, digite novamente")
                AT = int(input("Digite um valor para HP entre 0 e 150: "))
        self.AT = AT
    def atribuiDF(self, DF):
        while(DF>120 or DF<0):
            if(DF>120):
                print("\nValor maior que o limite, digite novamente")
                DF = int(input("Digite um valor para HP entre 0 e 120: "))
            if(DF<0):
                print("\nValor menor que o limite, digite novamente")
                DF = int(input("Digite um valor para HP entre 0 e 120: "))
        self.DF = DF
    def atribuiSP_AT(self, a):
        while(a>100 or a<0):
            if(a>100):
                print("\nValor maior que o limite, digite novamente")
                a = int(input("Digite um valor para HP entre 0 e 100: "))
            if(a<0):
                print("\nValor menor que o limite, digite novamente")
                a = int(input("Digite um valor para HP entre 0 e 100: "))
        self.a = a
    def atribuiSP_DF(self, b):
        while(b>100 or b<0):
            if(b>100):
                print("\nValor maior que o limite, digite novamente")
                b = int(input("Digite um valor para HP entre 0 e 100: "))
            if(b<0):
                print("\nValor menor que o limite, digite novamente")
                b = int(input("Digite um valor para HP entre 0 e 100: "))
        self.SP_DF = b
    def atribuiSP(self, SP):
        while(SP>150 or SP<0):
            if(SP>150):
                print("\nValor maior que o limite, digite novamente")
                SP = int(input("Digite um valor para HP entre 0 e 150: "))
            if(SP<0):
                print("\nValor menor que o limite, digite novamente")
                SP = int(input("Digite um valor para HP entre 0 e 150: "))
        self.SP = SP
    def aprendeGolpe(self, g):
        self.golpes.append(g)

nome = input("Digite o nome do novo Pokemon: ")
pk1=Pokemon(nome, 0)

HP = int(input("\nDigite a vida do Pokemon {0}: ".format(nome)))
pk1.atribuiHP(HP)

AT = int(input("\nDigite o ataque do Pokemon {0}: ".format(nome)))
pk1.atribuiAT(AT)

DF = int(input("\nDigite a defesa do Pokemon {0}: ".format(nome)))
pk1.atribuiDF(DF)

a = int(input("\nDigite a velocidade de ataque do Pokemon {0}: ".format(nome)))
pk1.atribuiSP_AT(a)

b = int(input("\nDigite a velocidade de defesa do Pokemon {0}: ".format(nome)))
pk1.atribuiSP_DF(b)

c = int(input("\nDigite a velocidade do Pokemon {0}: ".format(nome)))
pk1.atribuiSP(c)

d = input("\nDigite o novo golpe do Pokemon {0}: ".format(nome))
pk1.aprendeGolpe(d)

print()
print(pk1.__dict__)
print()